{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "sourceMap": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "./dist",    // ✅ Output folder for compiled JS files
    "rootDir": "./src"     // ✅ Where your TypeScript files are located
  },
  "exclude": ["node_modules"]
}
